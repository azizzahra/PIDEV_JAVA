<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.net.URL?>

<HBox xmlns="http://javafx.com/javafx/15.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.NavBarController"
      styleClass="nav-bar">

    <!-- Include the dedicated CSS for NavBar -->
    <stylesheets>
        <URL value="@navbar.css" />
    </stylesheets>

    <!-- Logo à gauche -->
    <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" styleClass="logo-container">
        <Label text="AGROSPHERE" styleClass="logo-text">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </HBox>

    <!-- Menu au centre -->
    <HBox alignment="CENTER" HBox.hgrow="ALWAYS" spacing="20" styleClass="nav-menu">
        <Button text="Home" onAction="#navigateToHome" />
        <Button text="MarketPlace" />
        <Button text="Event" />
        <Button text="Forum" onAction="#navigateToForum" />
        <Button text="Farm" onAction="#navigateToListFarm" />
        <Button text="About Us" />
        <Button text="Contact" />
    </HBox>

    <!-- Bouton de connexion à droite -->
    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" styleClass="login-container">
        <Button styleClass="login-button">
            <graphic>
                <HBox spacing="5" alignment="CENTER">
                    <FontIcon iconLiteral="fa-user" iconSize="14" />
                    <Label text="Aziz" />
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <padding>
        <Insets top="15" right="30" bottom="15" left="30" />
    </padding>
</HBox>