<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ForumDController"
            prefHeight="800.0" prefWidth="1000.0">

    <!-- TOP BAR -->
    <top>
        <HBox style="-fx-background-color: #3e8914; -fx-padding: 15px; -fx-alignment: center-left; -fx-spacing: 10px;">
            <Label text="🌱 Forum AgroSmart" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="+ Nouveau Post" onAction="#handleNewPost"
                    style="-fx-background-color: #fff; -fx-text-fill: #3e8914; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button text="Retour au Dashboard" onAction="#handleReturnToDashboard"
                    style="-fx-background-color: #2d7340; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Forum de discussion" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e5631;"/>
                <Pane HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="categoryFilter" promptText="Filtrer par catégorie" />
                <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="200" />
                <Button text="🔍" onAction="#handleSearch" />
            </HBox>

            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox fx:id="postsContainer" spacing="15" style="-fx-padding: 10;">
                    <!-- Posts will be populated here dynamically -->
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox style="-fx-background-color: #3e8914; -fx-padding: 8px; -fx-alignment: center-right; -fx-spacing: 10;">
            <Label text="AgroSmart © 2025 - Technologie au service de l'agriculture" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>

