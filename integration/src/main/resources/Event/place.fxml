<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="AnchorPane" fx:controller="Controller.Event.PlaceController" style="-fx-background-color: #4CAF50;">

    <!-- Header Section with dark background -->
    <VBox layoutX="20" layoutY="10" style="-fx-background-color: #2b2b2b; -fx-background-radius: 10; -fx-padding: 20; -fx-spacing: 10;">
        <!-- Include the navigation bar at the top -->
        <fx:include source="../NavBar.fxml" />

        <!-- Welcome Text Box -->
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 10;" prefWidth="1500">
            <Label text="Welcome to Events" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ffffff;"/>
            <Label text="Explore the places and manage them effectively" style="-fx-font-size: 16px; -fx-text-fill: #cccccc;"/>
        </VBox>
    </VBox>

    <!-- Search Section - positioned below welcome box -->
    <VBox spacing="15" layoutX="20" layoutY="290" style="-fx-padding: 0 20;">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by name" prefWidth="200"
                       style="-fx-background-color: white; -fx-text-fill: #333333; -fx-prompt-text-fill: #666666; -fx-border-color: #2b2b2b; -fx-border-radius: 5;"/>
            <TextField fx:id="minPriceField" promptText="Min price" prefWidth="120"
                       style="-fx-background-color: white; -fx-text-fill: #333333; -fx-prompt-text-fill: #666666; -fx-border-color: #2b2b2b; -fx-border-radius: 5;"/>
            <TextField fx:id="maxPriceField" promptText="Max price" prefWidth="120"
                       style="-fx-background-color: white; -fx-text-fill: #333333; -fx-prompt-text-fill: #666666; -fx-border-color: #2b2b2b; -fx-border-radius: 5;"/>
            <Button text="Filter" onAction="#handleFilter"
                    style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Actions Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" layoutX="20" layoutY="250" style="-fx-padding: 0 20;">
        <Button text="Add New Place" onAction="#handleAdd"
                style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 5;"/>
        <Button text="Go to Loans" onAction="#handleGoToLoans" fx:id="goToLoansBtn"
                style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 5;"/>
        <Button text="Home" onAction="#Rhome"
                style="-fx-background-color: #2b2b2b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Data Table Section -->
    <TableView fx:id="placeTable" layoutX="20" layoutY="330" prefWidth="1000" prefHeight="400"
               style="-fx-background-color: white; -fx-text-fill: #333333; -fx-table-cell-border-color: transparent;">
        <columns>
            <TableColumn text="Name" fx:id="nameCol" style="-fx-text-fill: #333333; -fx-alignment: CENTER;"/>
            <TableColumn text="Price" fx:id="priceCol" style="-fx-text-fill: #333333; -fx-alignment: CENTER;"/>
            <TableColumn text="Capacity" fx:id="capacityCol" style="-fx-text-fill: #333333; -fx-alignment: CENTER;"/>
            <TableColumn text="Image" fx:id="imageCol" style="-fx-text-fill: #333333; -fx-alignment: CENTER;"/>
            <TableColumn text="Actions" fx:id="actionsCol" style="-fx-text-fill: #333333; -fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <!-- Add Button -->

</AnchorPane>