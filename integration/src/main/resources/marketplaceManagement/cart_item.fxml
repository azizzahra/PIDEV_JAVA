<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.marketplaceManagement.CartItemController"
      spacing="20" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">

    <ImageView fx:id="productImage" fitHeight="60" fitWidth="60" preserveRatio="true" />

    <VBox spacing="5">
        <Label fx:id="nameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="unitPriceLabel" text="Price/unit: 0 TND"/>
    </VBox>

    <HBox spacing="5" alignment="CENTER">
        <Button fx:id="btnDecrease" text="➖"/>
        <Label fx:id="quantityLabel" text="1" style="-fx-min-width: 30px; -fx-alignment: center;"/>
        <Button fx:id="btnIncrease" text="➕"/>
    </HBox>

    <Label fx:id="lineTotalLabel" style="-fx-font-weight: bold; -fx-text-fill: green;"/>

    <Region HBox.hgrow="ALWAYS"/>
    <Button fx:id="btnRemove" text="Remove" style="-fx-background-color: #ffdddd;"/>
</HBox>
