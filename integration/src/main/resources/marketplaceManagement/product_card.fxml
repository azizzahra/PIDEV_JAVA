<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="productCardRoot" styleClass="product-card" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.marketplaceManagement.ProductCardController"
      alignment="CENTER" spacing="5" minWidth="220" maxWidth="220">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <ImageView fx:id="productImage" fitWidth="200" fitHeight="150" preserveRatio="true"/>

    <Label fx:id="productName" styleClass="product-name" wrapText="true" alignment="CENTER"/>

    <Label fx:id="productDescription" styleClass="product-description" wrapText="true"
           maxHeight="40" alignment="CENTER"/>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="productPrice" styleClass="product-price"/>
    </HBox>

    <Label fx:id="productStock" styleClass="product-stock"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addToCartButton" styleClass="add-to-cart-button" text="Add to Cart" onAction="#handleAddToCart"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="categoryLabel" styleClass="category-label"/>
    </HBox>
</VBox>