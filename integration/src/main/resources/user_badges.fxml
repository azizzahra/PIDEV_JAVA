<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.UserBadgesController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <VBox style="-fx-background-color: #2e7d32; -fx-padding: 20; -fx-spacing: 10;">
            <Label text="ðŸŽ– Badges de l'utilisateur" 
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 0 0 5 0;"/>
            <Label fx:id="userNameLabel" 
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-style: italic;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="badgesTable" 
                      style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <columns>
                    <TableColumn fx:id="colTitre" text="Titre" prefWidth="150" 
                               style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="250"
                               style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="120"
                               style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colDate" text="Date d'attribution" prefWidth="150"
                               style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colAction" text="Actions" prefWidth="150"
                               style="-fx-alignment: CENTER;"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                <Button text="Ajouter un badge" onAction="#openAddBadgeWindow" 
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #e8f5e9; -fx-padding: 15;">
            <Button text="Retour" onAction="#goBack" 
                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </HBox>
    </bottom>


</BorderPane> 