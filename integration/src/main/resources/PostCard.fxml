<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.PostCardController"
      style="-fx-background-color: linear-gradient(to bottom, #f0f8f0, #e6f2e6);
             -fx-border-color: #99cc99;
             -fx-border-radius: 12;
             -fx-background-radius: 12;
             -fx-padding: 18;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"
      spacing="12">

    <!-- En-tête avec catégorie et utilisateur -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label fx:id="categoryLabel"
               style="-fx-background-color: linear-gradient(to right, #4CAF50, #66BB6A);
                      -fx-text-fill: white;
                      -fx-padding: 4 12;
                      -fx-background-radius: 15;
                      -fx-font-size: 13px;
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 1);"/>

        <Region HBox.hgrow="ALWAYS" />

        <HBox alignment="CENTER" spacing="5">
            <Label fx:id="usernameLabel"
                   style="-fx-text-fill: #333333;
                          -fx-font-weight: bold;
                          -fx-font-size: 15px;"/>
        </HBox>
    </HBox>

    <!-- Séparateur subtil -->
    <Separator style="-fx-opacity: 0.5;"/>

    <!-- Titre du post -->
    <Label fx:id="postTitleLabel"
           style="-fx-text-fill: #1e3e1e;
                  -fx-font-size: 20px;
                  -fx-font-weight: bold;
                  -fx-padding: 5 0;
                  -fx-cursor: hand;"/>

    <!-- Contenu du post -->
    <StackPane>
        <Text fx:id="postPreviewText"
              style="-fx-fill: #444444;
                     -fx-font-size: 15px;"
              wrappingWidth="1130"/>
    </StackPane>

    <!-- Métadonnées: date, vues, pièces jointes -->
    <HBox spacing="20" style="-fx-padding: 8 0;">
        <Label fx:id="postDateLabel"
               style="-fx-text-fill: #666666;
                      -fx-font-size: 13px;"/>

        <Label fx:id="viewsLabel"
               style="-fx-text-fill: #666666;
                      -fx-font-size: 13px;"/>

        <Label fx:id="attachmentLabel"
               style="-fx-text-fill: #0066cc;
                      -fx-underline: true;
                      -fx-font-size: 13px;
                      -fx-cursor: hand;" />
    </HBox>

    <!-- Séparateur subtil -->
    <Separator style="-fx-opacity: 0.5;"/>

    <!-- Boutons d'interaction -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <!-- Upvote Button avec flèche vers le haut -->
        <StackPane>
            <Button fx:id="upvoteButton" styleClass="vote-button"
                    style="-fx-background-color: transparent;
                          -fx-padding: 8 12;
                          -fx-background-radius: 20;
                          -fx-border-radius: 20;
                          -fx-cursor: hand;">
                <graphic>
                    <SVGPath content="M0,10 L10,0 L20,10 L15,10 L15,20 L5,20 L5,10 Z"
                             style="-fx-fill: #4CAF50; -fx-stroke: #4CAF50; -fx-stroke-width: 1;" />
                </graphic>
            </Button>
        </StackPane>

        <!-- Vote Count avec style amélioré -->
        <Label fx:id="voteCountLabel"
               style="-fx-font-weight: bold;
                      -fx-font-size: 16px;
                      -fx-text-fill: #1e3e1e;
                      -fx-min-width: 40;
                      -fx-alignment: center;"/>

        <!-- Downvote Button avec flèche vers le bas -->
        <StackPane>
            <Button fx:id="downvoteButton" styleClass="vote-button"
                    style="-fx-background-color: transparent;
                          -fx-padding: 8 12;
                          -fx-background-radius: 20;
                          -fx-border-radius: 20;
                          -fx-cursor: hand;">
                <graphic>
                    <SVGPath content="M0,0 L20,0 L10,10 Z M5,0 L5,10 L15,10 L15,0 Z"
                             style="-fx-fill: #F44336; -fx-stroke: #F44336; -fx-stroke-width: 1;" />
                </graphic>
            </Button>
        </StackPane>

        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="translateButton"
                style="-fx-background-color: rgba(76, 175, 80, 0.1);
                   -fx-text-fill: #3c8c40;
                   -fx-font-size: 14px;
                   -fx-padding: 8 16;
                   -fx-background-radius: 20;
                   -fx-border-radius: 20;
                   -fx-border-color: #4CAF50;
                   -fx-border-width: 1;
                   -fx-cursor: hand;"
                text="🌐 Traduire" />
        <!-- Autres boutons inchangés -->
        <Button fx:id="commentButton"
                style="-fx-background-color: rgba(76, 175, 80, 0.1);
                       -fx-text-fill: #3c8c40;
                       -fx-font-size: 14px;
                       -fx-padding: 8 16;
                       -fx-background-radius: 20;
                       -fx-border-radius: 20;
                       -fx-border-color: #4CAF50;
                       -fx-border-width: 1;
                       -fx-cursor: hand;" />

        <Button fx:id="shareButton"
                style="-fx-background-color: rgba(76, 175, 80, 0.1);
                       -fx-text-fill: #3c8c40;
                       -fx-font-size: 14px;
                       -fx-padding: 8 16;
                       -fx-background-radius: 20;
                       -fx-border-radius: 20;
                       -fx-border-color: #4CAF50;
                       -fx-border-width: 1;
                       -fx-cursor: hand;" />
    </HBox>
</VBox>