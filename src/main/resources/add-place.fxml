<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AddPlaceController"
      stylesheets="style.css"

      spacing="10" style="-fx-padding: 20;">

    <Label text="Add New Place" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Capacity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="capacityField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Image:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="imageField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>