<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.devmasters.agrosphere.marketplaceManagement.Controller.ProductListController"
      style="-fx-padding: 5;">
    <!-- Header
    <Label text="📦 Product Dashboard" styleClass="label"/>-->

    <!-- Toolbar -->
    <ToolBar>
        <Button text="🔍 Filter"/>
        <Button text="↕ Sort"/>
        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleView" text="+ Create New" onAction="#handleAddProduct"/>
    </ToolBar>

    <!-- Main Product Container -->
    <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;" VBox.vgrow="ALWAYS">
        <VBox fx:id="productContainer" spacing="10" style="-fx-padding: 15;"/>
    </ScrollPane>
</VBox>
