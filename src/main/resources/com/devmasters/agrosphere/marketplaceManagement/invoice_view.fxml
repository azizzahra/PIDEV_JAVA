<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.devmasters.agrosphere.marketplaceManagement.Controller.InvoiceViewController"
            style="-fx-background-color: white;" prefWidth="800" prefHeight="700">

    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Button text="Print Invoice" onAction="#printInvoice" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <HBox style="-fx-background-color: #f1f8e9; -fx-padding: 15;">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="INVOICE" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label fx:id="lblInvoiceNumber" text="Invoice Number: 0"/>
                    <Label fx:id="lblInvoiceDate" text="Tax Date: 01/01/2023"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox spacing="50">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="From:" style="-fx-font-weight: bold"/>
                    <Label fx:id="lblFarmName" text="Farm Name"/>
                    <Label fx:id="lblFarmerName" text="Farmer Name"/>
                    <Label fx:id="lblFarmerPhone" text="Phone Number"/>
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="To:" style="-fx-font-weight: bold"/>
                    <Label fx:id="lblBuyerName" text="Buyer Name"/>
                    <Label fx:id="lblBuyerPhone" text="Phone Number"/>
                    <Label fx:id="lblBuyerEmail" text="Email"/>
                </VBox>
            </HBox>

            <VBox style="-fx-background-color: #333333; -fx-padding: 15;" spacing="5">
                <Label text="Delivery Details" style="-fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label text="Delivery will be between 2 to 5 days" style="-fx-text-fill: white;"/>
                <Label fx:id="lblDeliveryFee" text="Delivery Fee: 5.00 TND" style="-fx-text-fill: white;"/>
            </VBox>

            <TableView fx:id="tableOrderItems">
                <columns>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="colRate" text="Rate" prefWidth="150"/>
                    <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="150"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <Label text="Subtotal:"/>
                    <Label text="Delivery Fee:"/>
                    <Label text="Total:" style="-fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <Label fx:id="lblSubtotal" text="0.00 TND"/>
                    <Label fx:id="lblDeliveryFeeAmount" text="5.00 TND"/>
                    <Label fx:id="lblTotal" text="0.00 TND" style="-fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" style="-fx-padding: 15; -fx-border-color: #dddddd; -fx-border-width: 1 0 0 0;">
            <Label text="Thank you for your business!" style="-fx-font-style: italic;"/>
            <Label fx:id="lblRegisteredAddress" text="Registered Office Address"/>
        </VBox>
    </bottom>
</BorderPane>