<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<ScrollPane fitToWidth="true"
            styleClass="transparent-scroll-pane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.devmasters.agrosphere.marketplaceManagement.Controller.OrderListController">

    <HBox style="-fx-background-color: #e6e6e6; -fx-background-radius: 5; -fx-border-color: #b3b3b3; -fx-border-radius: 5; -fx-padding: 10;"
          spacing="10" alignment="CENTER_LEFT">

        <Button text="🔍 Filter" styleClass="button"/>
        <Button text="↕ Sort" styleClass="button"/>

        <!-- Search field and button -->
        <HBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <TextField promptText="Search categories..." HBox.hgrow="ALWAYS"/>
            <Button text="🔍" styleClass="button"/>
        </HBox>

        <Button fx:id="btnToggleView"
                text="+ Add New"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"
                />
    </HBox>

    <VBox fx:id="orderContainer"
          styleClass="order-container"
          spacing="15">
    </VBox>
</ScrollPane>