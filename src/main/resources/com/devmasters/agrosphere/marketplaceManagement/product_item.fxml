<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.devmasters.agrosphere.marketplaceManagement.Controller.ProductItemController"
            style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);"
            prefHeight="140" prefWidth="800">

    <HBox spacing="20" alignment="CENTER_LEFT" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <ImageView fx:id="imageView" fitWidth="80" fitHeight="80" preserveRatio="true"/>

        <VBox spacing="4" HBox.hgrow="ALWAYS">
            <!-- Category is now displayed before product name -->
            <Button fx:id="categoryButton" styleClass="category-pill"
                    style="-fx-background-color: #cdecc5; -fx-text-fill: #1a3d1f; -fx-background-radius: 12; -fx-padding: 3 10; -fx-font-size: 11px;" />
            <Label fx:id="nameLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="descriptionLabel" wrapText="true" maxWidth="500" style="-fx-text-fill: #555;" />
            <HBox spacing="10">
                <Label fx:id="priceLabel"/>
                <Label fx:id="stockLabel"/>
            </HBox>
        </VBox>

        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="updateButton" text="Update" styleClass="btn-edit" prefWidth="100"/>
            <Button fx:id="deleteButton" text="Delete" styleClass="btn-delete" prefWidth="100"/>
        </VBox>

    </HBox>
</AnchorPane>

