<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.devmasters.agrosphere.marketplaceManagement.Controller.CategoryListController"
      style="-fx-padding: 5;">

    <!-- Container for filtering, sorting, and search -->
    <HBox style="-fx-background-color: #e6e6e6; -fx-background-radius: 5; -fx-border-color: #b3b3b3; -fx-border-radius: 5; -fx-padding: 10;"
          spacing="10" alignment="CENTER_LEFT">

        <Button text="ðŸ” Filter" styleClass="button"/>
        <Button text="â†• Sort" styleClass="button"/>

        <!-- Search field and button -->
        <HBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <TextField promptText="Search categories..." HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”" styleClass="button"/>
        </HBox>

        <Button fx:id="btnAddCategory"
                text="+ Add Category"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleAddCategory"/>
    </HBox>

    <!-- Main Category Container with ScrollPane like product list -->
    <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;" VBox.vgrow="ALWAYS">
        <VBox fx:id="categoryContainer" spacing="15" style="-fx-padding: 15;"/>
    </ScrollPane>
</VBox>