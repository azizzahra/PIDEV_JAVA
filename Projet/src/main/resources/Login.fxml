<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController"
            prefHeight="576.0" prefWidth="1101.0">

    <!-- Partie gauche avec image -->
    <left>
        <AnchorPane prefHeight="576.0" prefWidth="680.0" style="-fx-background-color: #006400;">
            <children>
                <ImageView fitHeight="604.0" fitWidth="598.0" layoutX="38.0" layoutY="22.0" preserveRatio="true" />
            </children>
        </AnchorPane>
    </left>

    <!-- Partie centre avec les champs -->
    <center>
        <AnchorPane>
            <children>

                <Text layoutX="189.0" layoutY="103.0" fill="#006400" text="WELCOME TO Agrosphere" wrappingWidth="591.0">
                    <font>
                        <Font name="System Bold" size="40.0" />
                    </font>
                </Text>

                <TextField fx:id="mailFieldLogin" layoutX="289.0" layoutY="193.0"
                           prefHeight="25.0" prefWidth="202.0"
                           promptText="Mail"
                           style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0 0 2 0;" />

                <PasswordField fx:id="passwordFieldLogin" layoutX="289.0" layoutY="246.0"
                               prefHeight="25.0" prefWidth="202.0"
                               promptText="Password"
                               style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0 0 2 0;" />

                <Button fx:id="loginButton" layoutX="329.0" layoutY="383.0"
                        mnemonicParsing="false" onAction="#login"
                        prefHeight="43.0" prefWidth="106.0"
                        style="-fx-background-color: black; -fx-background-radius: 0px;"
                        text="Login" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>

                <Button layoutX="289.0" layoutY="445.0" onMouseClicked="#Register"
                        text="Don't have an account? Register">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <font>
                        <Font name="Arial" size="13.0"/>
                    </font>
                </Button>

                <Label fx:id="checkMailLogin" layoutX="284.0" layoutY="227.0"
                       prefHeight="18.0" prefWidth="295.0"/>
                <Label fx:id="CheckPasswordLogin" layoutX="284.0" layoutY="279.0"
                       prefHeight="18.0" prefWidth="295.0"/>



                <Label fx:id="LabelCopyNotify" layoutX="432.0" layoutY="280.0"
                       prefHeight="15.0" prefWidth="42.0">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>

                <ImageView fx:id="eyemdp" fitHeight="27.0" fitWidth="27.0"
                           layoutX="461.0" layoutY="252.0"
                           onMouseClicked="#eyemdp"
                           pickOnBounds="true" preserveRatio="true" />

                <TextField fx:id="tempPasswordField" layoutX="289.0" layoutY="246.0"
                           prefHeight="28.0" prefWidth="174.0"
                           promptText="Password"
                           style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0 0 2 0;" />

            </children>
        </AnchorPane>
    </center>
</BorderPane>
